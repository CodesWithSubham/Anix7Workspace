{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../../shared/*"],
      "@/*": ["./*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "types.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "../../shared/**/*.ts",
    "../../shared/**/*.js",
    "../../shared/**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
    // "../../shared/config/eslint/next.mjs"
  ],
  "exclude": ["node_modules"]
}
