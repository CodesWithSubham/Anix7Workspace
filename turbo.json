{
  "$schema": "https://turborepo.com/schema.v2.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "NODE_ENV",
        "OWNER_EMAIL",
        "MONGODB_URI_AUTH",
        "MONGODB_URI_SHORTURLS",
        "MONGODB_URI_IMAGEUPLOADS",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "BETTER_AUTH_SECRET",
        "NEXT_PUBLIC_AUTH_BASE_URL",
        "SHORT_URL",
        "URL_SHORTENER_TOKEN",
        "EMAIL_HOST",
        "EMAIL_PASSWORD",
        "NO_REPLY_EMAIL",
        "CONTACT_EMAIL",

        "BASE_URL",

        "ROOT_URL",
        "WHERE_TO_REDIRECT_AFTER_PROCESSING",

        "IMGUR_IMAGE_URL",
        "IMGUR_CLIENT_ID_1",
        "IMGUR_CLIENT_SECRET_1",
        "BLOB_READ_WRITE_TOKEN",
        "BLOB_BASE_URL",

        "MONGODB_URI_ANIPIC",

        "PORT"
      ]
    },
    "start": {
      "dependsOn": ["^start"],
      "cache": false,
      "persistent": true
    },
    "lint": {}
  }
}
